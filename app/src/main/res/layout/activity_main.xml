<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.defenselabs.gpslocationsend.MainActivity">


    <EditText
        android:id="@+id/address"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:hint="dstAddress" />

    <EditText
        android:id="@+id/port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="dstPort"
        android:layout_below="@+id/address"
        android:visibility="visible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LATITUDE :  "
        android:layout_marginTop="10dp"
        android:layout_below="@+id/port"
        android:id="@+id/latitude"
        android:textSize="20dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:ems="8"
        android:textSize="16dp"
        android:layout_toRightOf="@+id/latitude"
        android:layout_alignBottom="@+id/latitude"
        android:id="@+id/txt_latitude"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LONGITUDE :  "
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_latitude"
        android:id="@+id/longitude"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:ems="8"
        android:textSize="16dp"
        android:layout_toRightOf="@+id/longitude"
        android:layout_below="@+id/txt_latitude"
        android:id="@+id/txt_longitude"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEIGHT :  "
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_longitude"
        android:id="@+id/height"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:ems="3"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/height"
        android:layout_below="@+id/txt_longitude"
        android:id="@+id/txt_height"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND Co-ordinates"
        android:id="@+id/btn_send"
        android:layout_below="@+id/longitude"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAND Device"
        android:id="@+id/btn_land"
        android:layout_below="@+id/btn_send"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />



</RelativeLayout>
